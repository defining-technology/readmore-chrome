{
  "name": "readmore-ts",
  "version": "1.0.0",
  "description": "ReadMore Chrome Extension",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc",
    "test": "jest",
    "browserify": "browserify src/index.js -o dist/bundle.js",
    "build": "node ./scripts/build.js",
    "prebuild": "npm run clean && npm run tsc",
    "clean": "rimraf dist && mkdir dist && rimraf tmp && mkdir tmp"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chrome": "0.0.40",
    "@types/jest": "^18.1.1",
    "browserify": "^13.1.0",
    "browserify-replace": "^0.9.0",
    "copyfiles": "^1.2.0",
    "jest": "^18.1.0",
    "rimraf": "^2.5.4",
    "typescript": "^2.2.1",
    "immutable": "^3.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/scripts/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$"
  }
}
