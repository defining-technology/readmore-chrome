{
  "manifest_version": 2,

  "name": "ReadMore",
  "description": "Helping you get through your saved articles",
  "version": "1.0.2",
  "icons": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "64": "img/icon-64.png",
      "128": "img/icon-128.png",
      "256": "img/icon-256.png"
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
      "html/popup.html"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      }
    },
    "FETCH_NEXT": {
      "description": "Fetch the next article",
      "suggested_key": {
        "default": "Alt+Shift+N"
      }
    },
    "HANDLE_ARCHIVE": {
      "description": "Archive the current article",
      "suggested_key": {
        "default": "Alt+Shift+A"
      }
    },
    "HANDLE_DELETE": {
      "description": "Delete the current article",
      "suggested_key": {
        "default": "Alt+Shift+D"
      }
    }
  }
}